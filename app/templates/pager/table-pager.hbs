<div class="table-primary">
    <div role="grid" class="dataTables_wrapper form-inline no-footer">
        <div class="table-header clearfix">
            <div class="table-caption"></div>
            <div class="pull-left">
                <div class="DT-per-page">
                    <div class="dataTables_length" id="jq-datatables-example_length"><label>Per page: <select
                            name="jq-datatables-example_length"
                            class="form-control input-sm">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select></label></div>
                </div>
                <div class="DT-search">
                    <div class="dataTables_filter">
                        <label>
                            <input type="search" class="form-control input-sm" placeholder="Search by name..."></label>
                    </div>
                </div>
            </div>
            <div class="pull-right">
                <button type="button" class="btn btn-default" {{action "fetch"}}>Refresh</button>
            </div>
        </div>
        <table cellspacing="0" cellpadding="0" border="0"
               class="table table-striped table-bordered dataTable no-footer">
            <thead>
            <tr role="row">
                {{#each item in columns}}
                    <th>{{item.displayName}} <i {{action "sortField" item.fieldName}} class="fa fa-sort"></i></th>
                {{/each}}
                <th tabindex="0" rowspan="1" colspan="1">Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each record in this}}
                <tr class="gradeA even">
                    <td>{{record.name}}</td>
                    <td>{{moment record.createdOn 'MM/DD/YY'}}</td>
                    <td>
                        {{#link-to linkPath record class="btn btn-default"}} Open {{/link-to}}
                    </td>
                </tr>
            {{else}}
                <tr>no records found ... :-(</tr>
            {{/each}}
            </tbody>
        </table>
        <div class="table-footer clearfix">
            <div class="DT-label">
                <div class="dataTables_info">
                    Showing 1 to 10 of 57 entries
                </div>
            </div>
            <div class="DT-pagination">
                <div class="dataTables_paginate paging_simple_numbers">
                    {{page-numbers currentPage=page totalPages=totalPages numPagesToShow=5 showFL=true}}
                </div>
            </div>
        </div>

    </div>
</div>