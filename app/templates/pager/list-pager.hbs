<div class="panel-heading">
    <span class="panel-title">With pagination</span>
    <div class="panel-heading-controls">
        {{page-numbers currentPage=page totalPages=totalPages numPagesToShow=2 showFL=true}}
        <!-- / .panel-heading-controls -->
    </div>
    <!-- / .panel-heading-controls -->
</div> <!-- / .panel-heading -->
<div class="panel-body" style="height: 100%;">
    <ul class="list-group">
        {{#each record in this}}
            <li class="list-group-item">
                {{#link-to linkPath record}}
                    {{#each col in columns}}
                        {{pager-loop record col}} <br/>
                    {{/each}}
                {{/link-to}}
            </li>
        {{else}}
            <li>no recordsâ€¦ :-(</li>
        {{/each}}
    </ul>
</div>
<div class="panel-footer">
    <button type="button" class="btn btn-default" {{action "fetch"}}>Refresh</button>
</div>
