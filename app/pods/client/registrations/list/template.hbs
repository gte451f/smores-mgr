<div class="box box-{{box}}">
    <div class="box-header with-border">
        <h3 class="box-title">
            <span class="glyphicon glyphicon-tent"></span> Your Registrations
          {{#util/x-tooltip content='Use this page to check the status of existing camp registrations and create new registrations.'}}
            {{fa-icon "info"}}
          {{/util/x-tooltip}}
        </h3>

        <div class="box-tools pull-right">
          {{#link-to 'client.registrations.new' class="btn btn-box-tool" id="add-registration"}}
            {{fa-icon "plus"}} Register For Camp
          {{/link-to}}
        </div>
    </div>
    <div class="box-body ">
        <div class="list-group registration-list">
          {{#each this.model.registrations as |item|}}
            {{#link-to 'client.registrations.info' item.id class="list-group-item"}}
                <h4 class="list-group-item-heading">#
                  {{item.attendee.firstName}} {{item.attendee.lastName}} created on
                  {{moment-format item.createdOn 'MM/DD/YY'}}
                </h4>

            <p class="list-group-item-text">
              {{#each item.requests as |req|}}
                  <div class="well well-xs">
                      <span class="badge">{{req.priority}}</span>
                    {{req.submitStatus}}
                      -  {{req.event.location.name}} {{req.event.cabin.name}} {{req.event.program.name}}
                  </div>
              {{/each}}
                </p>
            {{/link-to}}
          {{else}}
              <li>no records found ... :-(</li>
          {{/each}}
        </div>
    </div>
</div>