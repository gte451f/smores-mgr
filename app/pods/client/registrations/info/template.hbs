<section class="content">
    <!-- Default box -->
    <div class="row">
        <section class="col-md-4">
            <div class="box box-primary">
                <div class="box-header ">
                    <h3 class="box-title">
                      {{#link-to 'client.members.edit-attendee' model.attendee.id id="attendee-name"}}{{model.attendee.fullName}}{{/link-to}}
                    </h3>

                    <div class="box-tools pull-right">
                        <div class="btn-group">
                          {{#link-to "client.registrations.list" class="btn btn-primary btn-sm"}}Back{{/link-to}}
                        </div>
                    </div>
                </div>

                <div class="box-body">
                    <dl class="dl-horizontal">
                        <dt>Grade</dt>
                        <dd>{{model.attendee.schoolGrade}}</dd>
                        <dt>BirthDay</dt>
                        <dd>{{moment-format model.attendee.dob 'MM/DD/YYYY'}}</dd>
                        <dt>Gender</dt>
                        <dd>{{model.attendee.gender}}</dd>
                        <dt>Notes</dt>
                        <dd>{{model.notes}}</dd>

                        <dt>Created On</dt>
                        <dd>{{moment-format model.createdOn 'MM/DD/YYYY'}}</dd>

                        <dt>Updated On</dt>
                        <dd>
                          {{moment-format model.updatedOn 'MM/DD/YYYY'}}
                        </dd>
                    </dl>
                </div>
            </div>


            <!-- /.box -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Registration Related Charges</h3>
                </div>
                <div class="box-body">
                    <dl class="dl-horizontal">
                      {{#each model.charges as |item|}}
                          <dt>{{item.name}}</dt>
                          <dd>{{item.amount}}</dd>
                      {{/each}}
                    </dl>
                </div>
                <div class="box-footer">
                    <div class="row">
                        <div class="col-md-12">
                            <small>Additional fees may be incurred as individual requests are processed.</small>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box -->
        </section>
        <section class="col-md-8">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="btn-group pull-right">
                    </div>
                    <h4 class="panel-title"><span class="glyphicon glyphicon-tent"></span> Individual Requests</h4>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table no-margin">
                            <thead>
                            <tr>
                                <th>Priority</th>
                                <th>Location</th>
                                <th>Program</th>
                                <th>Session</th>
                                <th>Cabin</th>
                                <th>Status</th>
                                <th>Confirmed?</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each model.requests as |item|}}
                                <tr>
                                    <td>{{item.priority}}</td>
                                    <td>{{item.event.location.name}}</td>
                                    <td>{{item.event.program.name}}</td>
                                    <td>{{item.event.session.name}}</td>
                                    <td>{{item.event.cabin.name}}</td>
                                    <td><span class="label label-success">{{item.submitStatus}}</span></td>
                                    <td>
                                      {{#if item.attending}}
                                          <span class="label label-success">Yes</span>
                                      {{else}}
                                          <span class="label label-warning">No</span>
                                      {{/if}}
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>