<div class="row">
    <div class="col-md-12">
        <h3>Add A {{model.mode}} Payment</h3>

      {{payment/source-chooser
      newCard=model.newCard
      newCheck=model.newCheck
      selectedCard=model.selectedCard
      existingCards=existingCards
      mode=model.mode
      enableCash=false
      enableCheck=false
      useNewCard=model.useNewCard
      saveNewCard=model.saveNewCard }}

        <div class="panel panel-success">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="panel-title">
                            <span class="label label-info">#2</span>
                            Enter the payment amount
                        </h3>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="row form-horizontal" style="margin-bottom: 10px;">
                    <div class="col-md-6">
                      {{util/validated-text valuePath='amount'
                      model=model.newPayment
                      placeholder="$$"
                      labelText="Amount"
                      horizontal=true
                      tooltip="Amount should not exceed this account's outstanding balance."}}
                    </div>
                    <div class="col-md-6">
                        <div class="pull-right">
                          {{#spinner-button
                          onclick=(action (route-action "save" model))
                          isSpinning=model.isPending
                          id="save-new-payment"
                          class="btn btn-primary"}}
                              Submit Payment
                          {{/spinner-button}}

                          {{#link-to model.returnRoute class="btn btn-primary"}}Cancel{{/link-to}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>