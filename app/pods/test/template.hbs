<div class="wrapper">
    {{partial "navigation/setup-header"}}
    {{partial "navigation/main-sidebar"}}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height: 1068px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Test Page
                <small>it all starts here</small>
            </h1>
            {{partial "navigation/main-breadcrumb"}}
        </section>
        <!-- Main content -->
        <section class="content">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Title</h3>
                </div>

                <div class="box-body">
                    <div>Toggle Test:</div>
                    {{!--{{x-toggle showLabels=true off='Hey' on='Ho' toggle='letsGo'}}--}}
                    <hr/>
                    {{!--{{letsGo}}--}}

                    <table class="table table-bordered">
                        <tr>
                            <td>currentController:{{model.currentLocation.name}}</td>
                            <td>currentColor: {{model.currentColor}}</td>
                        </tr>
                    </table>


                    <h2>X-Select</h2>
                    {{x-select
                    content=model.locations
                    optionValuePath="content"
                    optionLabelPath="content.name"
                    value=model.currentLocation
                    class="form-control"}}

                    <h2>Ember.Select</h2>
                    {{view "select"
                    content=model.locations
                    optionValuePath="content"
                    optionLabelPath="content.name"
                    selection=model.currentLocation
                    class="form-control"}}

                    <hr/>

                    <h3>Ember.Select</h3>
                    {{view "select"
                    content=model.colors
                    optionValuePath="content"
                    optionLabelPath="content"
                    selection=model.currentColor
                    class="form-control"}}

                    <h3>X-Select</h3>
                    {{x-select
                    content=model.colors
                    optionValuePath="content"
                    optionLabelPath="content"
                    value=model.currentColor
                    class="form-control"}}


                </div>
            </div>
            <!-- /.box -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{partial "navigation/main-footer"}}
</div>