<div class="nav-tabs-custom">
    <ul class="nav nav-tabs pull-right">
        <li><a data-toggle="tab" href="#payments">Payments</a></li>
        <li><a data-toggle="tab" href="#registrations">Registrations</a></li>
        <li class="active"><a data-toggle="tab" href="#main">Main</a></li>
        <li class="pull-left header"><i class="fa fa-th"></i> #{{model.id}} - {{model.name}}</li>

    </ul>
    <div class="tab-content">
        <div id="main" class="tab-pane active">
            <b>Attendees:</b>
            <ul>
                {{#each attendee in model.attendees}}
                    <li>
                        {{attendee.firstName}} {{attendee.lastName}}
                        {{#link-to "attendee" attendee.id}}Open{{/link-to}}
                    </li>
                {{/each}}
            </ul>

            <b>Owners:</b>
            <ul>
                {{#each owner in model.owners}}
                    <li>
                        {{owner.firstName}} {{owner.lastName}}
                        {{#link-to "owner" owner.id}}Open{{/link-to}}
                    </li>
                {{/each}}
            </ul>

            <b>Addresses:</b>
            <ul>
                {{#each addr in model.accountAddrs}}
                    <address>
                        {{addr.addr_1}}<br>
                        {{addr.city}}, {{addr.state}} {{addr.zip}}<br>
                        <dl class="dl-horizontal">
                            <dt>Billing:</dt>
                            <dd>{{addr.billing}}</dd>
                            <dt>Mailing:</dt>
                            <dd>{{addr.mailing}}</dd>
                        </dl>
                    </address>
                {{/each}}
            </ul>

        </div>
        <!-- /.tab-pane -->
        <div id="registrations" class="tab-pane">
            <b>Registrations</b>

            <p>Body</p>
        </div>
        <!-- /.tab-pane -->
        <div id="payments" class="tab-pane">
            <b>Payments</b>

            <p>Body</p>
        </div>
        <!-- /.tab-pane -->
    </div>
    <!-- /.tab-content -->
</div>