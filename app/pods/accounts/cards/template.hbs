<div class="nav-tabs-custom">
    {{accounts/tab-nav model=model isCard='active'}}
    <div class="tab-content">
        <div id="main" class="tab-pane active">
            <div class="row">
                <section class="col-md-4">
                    <div class="box box-default">
                        <div class="box-header">
                            <h3 class="box-title">Stored Credit Cards</h3>

                            <div class="box-tools pull-right">
                                {{#link-to 'accounts.cards.add' class="btn btn-box-tool"}} {{fa-icon 'plus'}} {{/link-to}}
                            </div>
                            <!-- /.box-tools -->
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">

                            {{#each model.cards as |item| }}
                                <div class="row">
                                    <div class="col-md-10">
                                        {{accounts/cards/card-info card=item}}
                                    </div>
                                    <div class="col-md-2">
                                            <a {{action 'showModal' 'modals/delete-confirm' item}} class="btn btn-default btn-block">{{fa-icon "trash-o"}}</a>
                                            {{#link-to 'accounts.cards.edit' item.id class="btn btn-default btn-block"}}{{fa-icon 'edit'}}{{/link-to}}
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                        <!-- /.box-body -->
                    </div>

                </section>
                <section class="col-md-8">
                    {{outlet}}
                </section>
            </div>
        </div>
    </div>
</div>