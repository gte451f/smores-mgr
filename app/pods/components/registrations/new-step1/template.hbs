<div class="row">
    <div class="col-md-12">
        <div class="form-group required">
            <label>Select the camper attending camp:</label>
          {{#x-select value=registration.attendee class="form-control"}}
              <option>Select</option>
            {{#each attendees as |item|}}
              {{#x-option value=item}}{{item.firstName}} {{item.lastName}}{{/x-option}}
            {{/each}}
          {{/x-select}}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group required">
            <label>How many sessions is your camper attending?:
              {{#util/x-tooltip contentAsHTML=true
              content="Something helpful here" }}?
              {{/util/x-tooltip}}
            </label>
          {{#x-select value=registrationMode class="form-control"}}
              <option value="Single">A single session of camp</option>
              <option value="Multiple">Multiple sessions of camp</option>
          {{/x-select}}
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Enter any important notes to camp staff here:</label>
          {{textarea class="form-control" value=registration.notes cols="80" rows="6"}}
        </div>
    </div>
</div>