<!-- Default box -->
<div class="box box-primary box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">Store Credit Card On File</h3>

        <div class="box-tools">
        </div>
    </div>
    <div class="box-body form-horizontal">
        <div class="row form-group required">
            <label class="col-sm-4 control-label">Name On Card</label>

            <div class="col-sm-8">
              {{input type="text" class="form-control" value=model.nameOnCard}}
            </div>
        </div>
        <div class="row form-group required">
            <label class="col-sm-4 control-label">Expiration</label>

            <div class="col-sm-4">
              {{#x-select value=model.expirationMonth class='form-control'}}
                  <option>Select</option>
                {{#each listService.monthNumber as |item|}}
                  {{#x-option value=item.value}}{{item.label}}{{/x-option}}
                {{/each}}
              {{/x-select}}
            </div>
            <div class="col-sm-4">
              {{#x-select value=model.expirationYear class='form-control'}}
                  <option>Select</option>
                {{#each listService.cardExpirationYear as |item|}}
                  {{#x-option value=item.value}}{{item.label}}{{/x-option}}
                {{/each}}
              {{/x-select}}
            </div>
        </div>
        <div class="row form-group required">
            <label class="col-sm-4 control-label">Card Number</label>

            <div class="col-sm-8">
              {{input type="text" class="form-control" value=model.number}}
            </div>
        </div>
        <div class="row form-group required">
            <label class="col-sm-4 control-label">CVC or CVN</label>

            <div class="col-sm-8">
                <div class="input-group">
                  {{input type="text" class="form-control" value=model.cvc}}

                  {{#util/input-tooltip content="A 3 or 4 digit code on your credit card."}}
                    {{fa-icon "info"}}
                  {{/util/input-tooltip}}
                </div>
            </div>
        </div>

        <div class="row form-group required">
            <label class="col-sm-4 control-label">Billing Address</label>

            <div class="col-sm-8">
              {{input type="text" class="form-control" value=model.address}}
            </div>
        </div>

        <div class="row form-group required">
            <label class="col-sm-4 control-label">Billing Zip Code</label>

            <div class="col-sm-8">
              {{input type="text" class="form-control" value=model.zip}}
            </div>
        </div>
        <div class="row form-group required">
            <label class="col-sm-4 control-label">Vendor</label>

            <div class="col-sm-8">
              {{#x-select value=model.vendor class='form-control'}}
                  <option>Select</option>
                {{#each listService.cardVendor as |item|}}
                  {{#x-option value=item.value}}{{item.label}}{{/x-option}}
                {{/each}}
              {{/x-select}}
            </div>
        </div>
        <div class="row form-group required">
            <label class="col-sm-4 control-label">Is this a debit card?</label>

            <div class="col-sm-8">
              {{#each listService.boolean as |item| }}
                {{radio-button value=item.value groupValue=model.isDebit}} {{item.name}}
              {{/each}}
            </div>
        </div>
        <div class="row form-group required">
            <label class="col-sm-4 control-label">This card may be used for recurring charges</label>

            <div class="col-sm-8">
              {{#each listService.boolean as |item| }}
                {{radio-button value=item.value groupValue=model.allowReoccuring}} {{item.name}}
              {{/each}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="btn-group pull-right">
                  {{#link-to "account.cards" class="btn btn-primary"}}
                      Cancel{{/link-to}}
                    <button class="btn btn-primary pull-right" {{action "save" model}}>Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.box -->
