<div class="nav-tabs-custom">
  {{accounts/tab-nav model=model isPayment='active'}}
    <div class="tab-content">
        <div id="main" class="tab-pane active">
            <h3>Add A {{mode}} Payment for account #{{model.account.id}}</h3>

            <div class="row">
                <div class="col-md-7">
                    <h3>
                        <span class="label label-info">#1</span>
                        Choose which type of payment to make
                    </h3>
                    {{payment/source-chooser}}
                </div>
                <div class="col-md-5">
                    <h3><span class="label label-info">#2</span> Enter the payment amount</h3>

                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-md-12">
                                    <h3 class="panel-title">Amount</h3>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">

                            <div class="row" style="margin-bottom: 10px;">
                                <div class="col-md-12">
                                    <div class="pull-right">
                                      {{#spinner-button action="save" isSpinning=model.isSpinning class="btn btn-primary" }}
                                          Submit Payment
                                      {{/spinner-button}}

                                      {{#link-to 'mgr.account.payments.info' class="btn btn-primary"}}Cancel{{/link-to}}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Amount $</label>

                                <div class="input-group">
                                  {{input type="text" class="form-control" value=model.payment.amount}}

                                  {{#util/input-tooltip content="Amount should not exceed this account's outstanding balance."}}
                                    {{fa-icon "info"}}
                                  {{/util/input-tooltip}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>