<div class="nav-tabs-custom">
  {{accounts/tab-nav model=model isInfo='active' redirect="redirect" suggestedEntry=suggestedEntry}}
  <div class="tab-content">
    <div id="main" class="tab-pane active">
      <div class="row">
        <div class="col-md-3">
          <h4 class="text-blue">
            #{{model.id}} - {{model.name}}:
            {{#link-to 'mgr.account.edit' model.id class="btn btn-default btn-xs pull-right" id="edit-account"}}
              Edit
            {{/link-to}}
          </h4>

          <dl class="dl">
            {{#each customFields as |field|}}
              <dt>{{field.display}}</dt>
              <dd>{{get model field.modelName}}</dd>
            {{/each}}

            <dt>Notes</dt>
            <dd>{{model.notes}}</dd>
          </dl>

        </div>
        <div class="col-md-3">
          <h4 class="text-blue">
            Owners:
            {{#link-to 'mgr.owner.add' class="btn btn-default btn-xs" id="add-owner"}}
              Add
            {{/link-to}}
          </h4>
          <ul class="nav nav-pills nav-stacked owner-list">
            {{#each model.owners as |owner| }}
              <li>
                {{#link-to "mgr.owner.edit" owner.id}}{{owner.firstName}} {{owner.lastName}}{{/link-to}}
              </li>
            {{/each}}
          </ul>
        </div>
        <div class="col-md-3">
          <h4 class="text-blue">
            Attendees:
            {{#link-to 'mgr.attendees.add' class="btn btn-default btn-xs" id="add-attendee"}}
              Add
            {{/link-to}}
          </h4>
          <ul class="nav nav-pills nav-stacked attendee-list">
            {{#each model.attendees as |attendee| }}
              <li>
                {{#link-to "mgr.attendees.info" attendee.id}}{{attendee.firstName}} {{attendee.lastName}}{{/link-to}}
              </li>
            {{/each}}
          </ul>
        </div>
        <div class="col-md-3">
          <h4 class="text-blue">Addresses:</h4>
          <ul class="list-unstyled">
            {{#each model.accountAddrs as |addr| }}
              <address>
                {{addr.addr_1}}<br>
                {{addr.city}}, {{addr.state}} {{addr.zip}}<br>

                {{#if addr.billing}}
                  <span class="label label-primary">Billing</span>
                {{/if}}

                {{#if addr.mailing}}
                  <span class="label label-primary">Mailing</span>
                {{/if}}
              </address>
            {{/each}}
          </ul>
        </div>
      </div>

    </div>
    <!-- /.tab-pane -->
  </div>
</div>
<!-- /.tab-content -->