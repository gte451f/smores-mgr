<div class="box box-warning">
    <!-- /.box-header -->
    <div class="box-body form-horizontal">
        <div class="form-group required">
            <label class="col-sm-4 control-label">Name</label>

            <div class="col-sm-8">
                {{input type="text" class="form-control" value=model.name}}
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-4 control-label">Minimum Age</label>

            <div class="col-sm-8">
                <div class="input-group">
                    {{input type="number" class="form-control" value=model.minAge}}
                    {{#input-tooltip content='Restrict registrations to campers that exceed this age at the cut off date.'}}
                        {{fa-icon "info"}}
                    {{/input-tooltip}}
                </div>
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-4 control-label">Maximum Age</label>

            <div class="col-sm-8">
                <div class="input-group">
                    {{input type="number" class="form-control" value=model.maxAge}}
                    {{#input-tooltip content='Restrict registrations to campers that are under this age at the cut off date.'}}
                        {{fa-icon "info"}}
                    {{/input-tooltip}}
                </div>
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-4 control-label">Gender</label>

            <div class="col-sm-8">
                {{#x-select value=model.gender class='form-control'}}
                    <option>Select</option>
                    {{#each genders as |item|}}
                        {{#x-option value=item}}{{item}}{{/x-option}}
                    {{/each}}
                {{/x-select}}
            </div>
        </div>
        <div class="form-group required">
            <label class="col-sm-4 control-label">Capacity</label>

            <div class="col-sm-8">
                <div class="input-group">
                    {{input type="number" class="form-control" value=model.capacity}}
                    {{#input-tooltip contentAsHTML=true
                    content='What is the maxium number of campers allowed in this cabin?  <br />
                    This will set a limit on the number of campers who can register for events related to this cabin.'}}
                        {{fa-icon "info"}}
                    {{/input-tooltip}}
                </div>
            </div>
        </div>
    </div>
    <div class="box-footer clearfix">
        <div class="btn-group pull-right">
            <button class="btn btn-primary btn-xs" {{action "save" model}}>Save</button>
            {{#link-to "cabins" class="btn btn-primary btn-xs"}}Cancel{{/link-to}}
        </div>
    </div>
</div>