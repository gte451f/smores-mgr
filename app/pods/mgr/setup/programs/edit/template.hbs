<div class="box box-warning">
    <div class="box-header with-border"></div>
    <!-- /.box-header -->
    <div class="box-body form-horizontal">
        <div class="row form-group required">
            <label class="col-sm-4 control-label">Name:</label>

            <div class="col-sm-8">
              {{input class="form-control" value=model.name}}
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-4 control-label">Description:</label>

            <div class="col-sm-8">
              {{textarea class="form-control" value=model.description rows=10}}
            </div>
        </div>
        <div class="row form-group required">
            <label class="col-sm-4 control-label">Fee:</label>

            <div class="col-sm-8">
                <div class="input-group">
                  {{input class="form-control" value=model.fee}}
                  {{#input-tooltip content='Automatically apply this fee to any confirmed camper registration.'}}
                    {{fa-icon "info"}}
                  {{/input-tooltip}}
                </div>
            </div>
        </div>
    </div>
    <div class="box-footer clearfix">
        <div class="btn-group pull-right">
            <button class="btn btn-primary btn-xs" {{action "save" model}}>Save</button>
          {{#link-to 'mgr.setup.programs.info' model class="btn btn-primary btn-xs"}}Cancel{{/link-to}}
        </div>
    </div>
</div>
