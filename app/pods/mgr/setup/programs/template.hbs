<h4>
    Setup: Programs
    {{#x-tooltip contentAsHTML=true
    content='Each program represents a camp\'s set of related activites and trips that the camper particpates in during their session. <ul>
                <li>A program includes an associated fee that the camper is charged when they register for an event with that program. </li>
                <li>Smores requires at least one program to be configured in order to accept registrations. </li></ul>'}}
        {{fa-icon "info"}}
    {{/x-tooltip}}
</h4>
<div class="row">
    <section class="col-lg-4">
        <div class="box box-warning">
            <div class="box-header with-border">
                <h3 class="box-title"></h3>

                <div class="box-tools">
                    <div class="btn-group pull-right">
                        {{#link-to 'mgr.setup.programs.add' class="btn btn-primary btn-xs"}}
                            {{fa-icon "plus"}} Program
                        {{/link-to}}
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <ul class="todo-list">
                    {{#each model as |record| }}
                        {{#if record.id}}
                            <li class="clearfix">
                                        <span class="text">
                                            {{record.name}}
                                        </span>

                                <div class="tools">
                                    {{#link-to 'mgr.setup.programs.info' record}}{{fa-icon "folder-open-o"}}{{/link-to}}
                                    {{#link-to 'mgr.setup.programs.edit' record}}{{fa-icon "edit"}}{{/link-to}}
                                </div>
                            </li>
                        {{/if}}
                    {{else}}
                        <li>no records found ... :-(</li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <!-- /. end box-primary -->
    </section>
    <section class="col-lg-8">
        {{outlet}}
    </section>
</div>
<!-- ./row -->