<h4>
    Setup: Locations
  {{#util/x-tooltip contentAsHTML=true
  content='Each location represents a place where you host camp. <ul>
                <li>Smores requires at least one location to be configured in order to accept registrations</li></ul>'}}
    {{fa-icon "info"}}
  {{/util/x-tooltip}}
</h4>

<div class="row">
    <section class="col-lg-4">
        <div class="box box-warning">
            <div class="box-header with-border">
                <h3 class="box-title"></h3>

                <div class="box-tools">
                    <div class="btn-group pull-right">
                      {{#link-to 'mgr.setup.locations.add' class="btn btn-primary btn-xs"}}
                        {{fa-icon "plus"}} Add
                      {{/link-to}}
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <ul class="todo-list">
                  {{#each model as |record| }}
                    {{#if record.id}}
                        <li class="clearfix">
                            <span class="text">{{record.name}}</span>

                            <div class="tools">
                              {{#link-to 'mgr.setup.locations.info' record}}{{fa-icon "folder-open-o"}}{{/link-to}}
                              {{#link-to 'mgr.setup.locations.edit' record}}{{fa-icon "edit"}}{{/link-to}}
                            </div>
                        </li>
                    {{/if}}
                  {{else}}
                      <li>no records found ... :-(</li>
                  {{/each}}
                </ul>
            </div>
        </div>
        <!-- /. end box-primary -->
    </section>
    <section class="col-lg-8">
      {{outlet}}
    </section>
</div>
<!-- ./row -->