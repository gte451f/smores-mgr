<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title">
            {{fa-icon 'user'}} {{model.firstName}} {{model.lastName}}
        </h3>

        <div class="box-tools">
            <button {{action 'showModal' 'modals/delete-confirm' model}} class="btn btn-primary btn-xs">Delete</button>
            {{#link-to 'mgr.setup.users.edit' model class="btn btn-primary btn-xs"}}Edit{{/link-to}}
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <dl class="dl-horizontal">
            <dt>Description</dt>
            <dd>{{model.email}}</dd>
            <dt>Active Status</dt>
            <dd>{{model.status}}</dd>
            <dt>Gender</dt>
            <dd>{{model.gender}}</dd>
        </dl>
    </div>
    <div class="box-footer"></div>
</div>
