<div class="box box-warning">
    <!-- /.box-header -->
    <div class="box-body form-horizontal">
        <div class="form-group">
            <label class="col-sm-2">Name</label>

            <div class="col-sm-10">
                {{input type="text" class="form-control" value=model.name}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">Start Date</label>

            <div class="col-sm-10">
                {{date-picker date=model.start format='MM-DD-YYYY' valueFormat='YYYY-MM-DD' class="form-control" allowBlank=true yearRange="0,4"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2">End Date</label>

            <div class="col-sm-10">
                {{date-picker date=model.end format='MM-DD-YYYY' valueFormat='YYYY-MM-DD' class="form-control" allowBlank=true yearRange="0,4"}}
            </div>
        </div>
    </div>
    <div class="box-footer clearfix">
        <div class="btn-group pull-right">
            <button class="btn btn-primary btn-xs" {{action "save" model}}>Save</button>
            {{#link-to "sessions" class="btn btn-primary btn-xs"}}Cancel{{/link-to}}
        </div>
    </div>
</div>

