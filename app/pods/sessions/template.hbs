<div class="wrapper">
    {{partial "navigation/setup-header"}}
    {{partial "navigation/main-sidebar"}}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height: 1068px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Setup: Sessions
                {{#my-tooltip contentAsHTML=true
                content='Each session represents a week that your camp is open. <ul>
                <li>Smores requires at least one session to be configured in order to accept registrations.</li></ul>'}}
                    {{fa-icon "info"}}
                {{/my-tooltip}}
            </h1>
            {{partial "navigation/main-breadcrumb"}}
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <section class="col-sm-4">
                    <div class="box box-warning">
                        <div class="box-header">
                            <div class="box-tools">
                                <div class="btn-group pull-right">
                                    {{#link-to "sessions.add" class="btn btn-primary btn-xs"}}
                                        {{fa-icon "plus"}} Session
                                    {{/link-to}}
                                </div>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <ul class="todo-list">
                                {{#each model as |record| }}
                                    {{#if record.id}}
                                        <li class="clearfix">
                                        <span class="text">
                                            {{record.name}} <small>from {{moment-format record.start 'MM/DD'}} to {{moment-format record.end 'MM/DD'}}</small>
                                        </span>

                                            <div class="tools">
                                                {{#link-to "sessions.edit" record}}{{fa-icon "edit"}}{{/link-to}}
                                                <a {{action 'showModal' 'modals/delete-confirm' record}}>{{fa-icon "trash-o"}}</a>
                                            </div>
                                        </li>
                                    {{/if}}
                                {{else}}
                                    <li>no records found ... :-(</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                    <!-- /. end box-primary -->
                </section>
                <section class="col-sm-2">
                </section>
                <section class="col-sm-6">
                    {{outlet}}
                </section>
            </div>
            <!-- ./row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{partial "navigation/main-footer"}}
</div>