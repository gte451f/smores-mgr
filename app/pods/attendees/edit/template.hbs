<div class="wrapper">
    {{partial "navigation/setup-header"}}
    {{partial "navigation/main-sidebar"}}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height: 1068px;">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Attendee Information:
            </h1>
            {{partial "navigation/main-breadcrumb"}}
        </section>
        <!-- Main content -->
        <section class="content">
            <!-- Default box -->
            <div class="row">
                <div class="col-md-8">
                    <!-- Default box -->
                    <div class="box box-primary box-solid">
                        <div class="box-header with-border">
                            <h3 class="box-title">{{model.firstName}} {{model.lastName}}</h3>

                            <div class="box-tools"></div>
                        </div>
                        <div class="box-body form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">First Name</label>

                                <div class="col-sm-10">
                                    {{input type="text" class="form-control" value=model.firstName}}</div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Last Name</label>

                                <div class="col-sm-10">
                                    {{input type="text" class="form-control" value=model.lastName}}</div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Birthday</label>

                                <div class="col-sm-10">
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        {{date-picker date=model.dob format='MM-DD-YYYY' valueFormat='YYYY-MM-DD' class="form-control" yearRange="-20,0"}}
                                    </div>
                                </div>
                            </div>
                            <div class="row form-group required">
                                <label class="col-sm-2 control-label">Gender</label>

                                <div class="col-sm-10">
                                    {{#each listService.gender as |item| }}
                                        {{radio-button value=item.value groupValue=model.gender}} {{item.display}}
                                    {{/each}}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Grade</label>

                                <div class="col-sm-10">
                                    <div class="input-group">
                                        {{#x-select value=model.schoolGrade class='form-control'}}
                                            <option>Select</option>
                                            {{#each listService.grade as |item|}}
                                                {{#x-option value=item.value}}{{item.display}}{{/x-option}}
                                            {{/each}}
                                        {{/x-select}}


                                        {{#input-tooltip content='The camper\'s most recent in progress or completed grade'}}
                                            {{fa-icon "info"}}
                                        {{/input-tooltip}}
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Active?</label>

                                <div class="col-sm-10">
                                    {{input type="checkbox" checked=model.active}} (Eligible to register for camp?)
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-10"></div>
                                <div class="col-md-1">
                                    {{#link-to 'attendees.info' model.id class="btn btn-primary pull-right"}}
                                        Back{{/link-to}}
                                </div>
                                <div class="col-md-1">
                                    <button class="btn btn-primary pull-right" {{action "save" model}}>Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box -->
                </div>
                <div class="col-md-4"></div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{partial "navigation/main-footer"}}
</div>